        "type": "object",
        "required": ["totalIncome", "totalExpense", "incomeForMonthOfYear", "expenseForMonthOfYear"],
        "properties": {
          "totalIncome": {
            "type": "number",
            "description": "message",
            "example": 48500
          },
          "totalExpense": {
            "type": "number",
            "description": "code",
            "example": 32950
          },
          "incomeForMonthOfYear": {
            "type": "object",
            "example": {
              "Дохід": 40000,
              "Доп.дохід": 8500
            }
          },
          "expenseForMonthOfYear": {
            "type": "object",
            "description": "code",
