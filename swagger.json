  "components": {
    "schemas": {
      "RegistrationRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "format": "email",
            "example": "example@gmail.com"
          },
          "password": {
            "type": "string",
            "description": "User's password",
            "example": "qwerty123"
          }
        }
      },
      "CurrentResponse":{
        "type": "object",
        "required": ["email", "avatarURL", "totalBalance"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User's email",
            "example": "example@gmail.com"
          },
          "avatarURL": {
            "type": "string",
            "description": "User's link avatar",
            "example": "//www.gravatar.com/avatar/cf5831de3973012ae4f2ee60242fb617"
          },
          "totalBalance": {
            "type": "number",
            "description": "User's balance",
            "example": 50000
          }
        }
      },
      "UpdateBalanceRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "totalBalance": {
            "type": "number",
            "description": "User's balance",
            "example": 5000
          }
        }
      },
      "AddExpenseTransactionRequest": {
        "type": "object",
        "required": ["date", "description", "category", "sum", "type"],
        "properties": {
          "date": {
            "type": "string",
            "description": "Transaction date",
            "format": "date",
            "example": "2022-08-30"
          },
          "description": {
            "type": "string",
            "description": "Transaction description",
            "example": "Meat"
          },
          "category": {
            "type": "string",
            "description": [
              "Транспорт",
              "Продукти",
              "Здоров'я",
              "Алкоголь",
              "Розваги",
              "Дім",
              "Техніка",
              "Комуналка",
              "Спорт, хобі",
              "Освіта",
              "Інше"
            ],
            "example": "products"
          },
          "sum": {
            "type": "number",
            "description": "summa",
            "example": 400
          },
          "type": {
            "type": "string",
            "description": "expense or income",
            "example": "expense"
          }
        }
      },
      "RegistrationResponse": {
        "type": "object",
        "required": ["user"],
        "properties":{
          "user": {
            "type": "object",
            "required":["email", "avatarURL", "token"],
            "properties": {          
                "email": {
                  "type": "string",
                  "example": "example@gmail.com"
                },
                "avatarURL": {
                  "type": "string",
                  "example": "www.gravatar.com/avatar/afd5b46d171ec84e3796561ca6d4f4a9"
                },
                "token": {
                  "type": "string",
                  "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYzMTM3ZThlNTZlY2JiYTJjYTBjNmY2MCIsImlhdCI6MTY2MjIyMjA1MiwiZXhwIjoxNjYyMzA4NDUyfQ.FVVEZEcdKx2VrZqzSY3gQeNbxpblHbt5NjwMzkooNaI"
                }
            }
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "required": ["user"],
        "properties": {
          "user":{
            "type": "object",
            "required": ["email", "token"],
            "properties":{
              "email": {
                "type": "string",
                "example":"example@gmail.com",
                "format": "email"
              },
              "token": {
                "type": "string",
                "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6IjYzMTM3ZThlNTZlY2JiYTJjYTBjNmY2MCIsImlhdCI6MTY2MjIyMjA1MiwiZXhwIjoxNjYyMzA4NDUyfQ.FVVEZEcdKx2VrZqzSY3gQeNbxpblHbt5NjwMzkooNaI"
              }
            }
          }
        }
      },
      "LogoutResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "description": "message",
            "example": "Logout success with id630a7441b8ed1ff8a8a403ee"
          },
          "code": {
            "type": "number",
            "description": "code",
            "example": "200"
          }
        },
        "example": {
        "email": "example@gmail.com",
        "avatarURL": "www.gravatar.com/avatar/afd5b46d171ec84e3796561ca6d4f4a9",
        "totalBalance": 5500
    }
      },

      "BalanceResponse": {
        "type": "object",
        "properties": {
          "totalBalance":{
            "type": "number",
            "example": 5000
          }
        }
      },
      "IncomeTransactionRequest": {
        "type": "object",
        "required": ["date", "description", "category", "sum"],
        "properties": {
            "date": {
              "type": "string",
              "description": "date",
              "example": "2022-08-29T00:00:00.000Z"
            },
            "description": {
              "type": "string",
              "description": "any description",
              "example": "premium"
            },
            "category": {
              "type": "string",
              "description": "one of 'Дохід' or 'Доп.дохід'",
              "example": "Доп.дохід"
            },
            "sum": {
              "type": "number",
              "description": "sum transaction",
              "example": "6500"
            }
        }
      },
      "IncomeTransactionResponse": {
        "type": "object",
        "required": ["id", "date", "owner", "sum", "description", "category"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Transaction id",
            "example": "630c6424c4126b2f6d97fa7f"
          },
          "date": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-01-01T00:00:00.000Z"
          },
          "owner": {
            "type": "string",
            "description": "User id",
            "example": "_id: 630a4ce122d8de88190363c9"
          },
          "description": {
            "type": "string",
            "description": "Description transaction",
            "example": "premium"
          },
          "category": {
            "type": "string",
            "description": "one of 'Дохід' or 'Доп.дохід'",
            "example": "Доп.дохід"
          },
          "sum": {
            "type": "number",
            "description":"sum description",
            "example": 6500
          },
          "createdAt": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-08-29T07:00:52.786Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-08-29T07:00:52.786Z"
          } 
        }
      },
      "ExpenseTransactionRequest": {
        "type": "object",
        "required": ["date", "description", "category", "sum"],
        "properties": {
            "date": {
              "type": "string",
              "description": "date",
              "example": "2022-08-29T00:00:00.000Z"
            },
            "description": {
              "type": "string",
              "description": "any description",
              "example": "banana"
            },
            "category": {
              "type": "string",
              "description": "one of 'Транспорт', 'Продукти', 'Здоровя', 'Алкоголь', 'Розваги', 'Дім', 'Техніка', 'Комуналка', 'Спорт, хобі', 'Освіта', 'Інше'",
              "example": "Продукти"
            },
            "sum": {
              "type": "number",
              "description": "sum transaction",
              "example": "100"
            }
        }
      },
      "ExpanseTransactionResponse": {
        "type": "object",
        "required": ["id", "date", "owner", "sum", "description", "category"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Transaction id",
            "example": "630c6424c4126b2f6d97fa7f"
          },
          "date": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-01-01T00:00:00.000Z"
          },
          "owner": {
            "type": "string",
            "description": "User id",
            "example": "_id: 630a4ce122d8de88190363c9"
          },
          "description": {
            "type": "string",
            "description": "Any description",
            "example": "banana"
          },
          "category": {
            "type": "string",
            "description": "one of 'Транспорт', 'Продукти', 'Здоровя', 'Алкоголь', 'Розваги', 'Дім', 'Техніка', 'Комуналка', 'Спорт, хобі', 'Освіта', 'Інше'",
            "example": "products"
          },
          "sum": {
            "type": "number",
            "description":"sum description",
            "example": 100
          },
          "createdAt": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-08-29T07:00:52.786Z"
          },
          "updatedAt": {
            "type": "string",
            "description": "Date transaction",
            "example": "2022-08-29T07:00:52.786Z"
          } 
        }
      },
      "DeleteTransactionResponse": {
        "type": "object",
        "required": ["message", "newBalance"],
        "properties": {
          "message": {
            "type": "string",
            "description": "message",
            "example": "Transaction with ID: 6314ea32e43673717f8f6b1e deleted"
