              "Здоров'я": 2000,
              "Алкоголь": 0,
              "Розваги": 3500,
              "Дім": 8000,
              "Техніка": 0,
              "Комуналка": 1750,
              "Спорт, хобі": 1500,
              "Освіта": 3500,
              "Інше": 200
            }
          }
        }
      },
      "ReportByMonthForYear": {
        "type": "object",
        "required": [],
        "properties": {
          "Січень": {
            "type": "number",
            "description": "May",
            "example": 33000
          },
